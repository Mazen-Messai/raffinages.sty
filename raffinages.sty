% Commande permettant d'écrire un commentaire.
\newcommand{\commentaire}[1]{
    \textcolor{blue}{-{}- \texttt{#1}}\par
}

% Commande permettant d'écrire une en-tête de raffinage.
% Usage ; \raffinage{numéro}{description}
% Exemple : \raffinage{1}{Initialiser une pile}
% Résulttat : R1 : Initialiser une pile
\newcommand{\raffinage}[2]{
    \noindent\texttt{R#1 :} \texttt{#2}\par
}
